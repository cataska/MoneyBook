@{
    ViewBag.Title = "Account Book Page";
}

@model WebApplication1.Models.ViewModels.AccountViewModel

<div class="well">
    @using (Ajax.BeginForm("Index", "AccountBook", new AjaxOptions()
    {
        UpdateTargetId = "ajax",
        HttpMethod = "post"
    }, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Category, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Value, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Value, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Value, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Created, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Created, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Created, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Note, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Note, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Note, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

<div id="ajax">
    @Html.Action("List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}